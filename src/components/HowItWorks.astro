---
import { flowSteps } from '../data/site-data';
---

<section id="how-it-works">
  <div class="bento-container">
    <div class="section-header">
      <div class="section-tag">Multi-Agent Architecture</div>
      <h2 class="section-title">How <span class="gradient-text">ZkNULL</span> Works</h2>
    </div>

    <div class="bento-flow-grid">
      <!-- Step 1: Market Analyst - Large Card -->
      <div class="flow-bento-card flow-card-large">
        <div class="card-shine"></div>
        <div class="step-indicator">
          <span class="step-num">01</span>
        </div>
        <div class="card-inner">
          <div class="card-visual">
            <div class="agent-avatar" style="background: linear-gradient(135deg, #D4A76A20, #D4A76A40);">
              <span class="agent-icon">{flowSteps[0].icon}</span>
              <div class="pulse-ring"></div>
            </div>
            <div class="status-badge active">Active</div>
          </div>
          <div class="card-info">
            <h3 class="flow-title">{flowSteps[0].title}</h3>
            <p class="flow-desc">{flowSteps[0].desc}</p>
          </div>
        </div>
        <div class="card-border"></div>
      </div>

      <!-- Step 2: Risk Manager -->
      <div class="flow-bento-card">
        <div class="card-shine"></div>
        <div class="step-indicator">
          <span class="step-num">02</span>
        </div>
        <div class="card-inner compact">
          <div class="agent-avatar small" style="background: linear-gradient(135deg, #E8C88820, #E8C88840);">
            <span class="agent-icon small">{flowSteps[1].icon}</span>
          </div>
          <h3 class="flow-title">{flowSteps[1].title}</h3>
          <p class="flow-desc">{flowSteps[1].desc}</p>
        </div>
        <div class="card-border"></div>
      </div>

      <!-- Step 3: Execution Agent -->
      <div class="flow-bento-card">
        <div class="card-shine"></div>
        <div class="step-indicator">
          <span class="step-num">03</span>
        </div>
        <div class="card-inner compact">
          <div class="agent-avatar small" style="background: linear-gradient(135deg, #00D08420, #00D08440);">
            <span class="agent-icon small">{flowSteps[2].icon}</span>
          </div>
          <h3 class="flow-title">{flowSteps[2].title}</h3>
          <p class="flow-desc">{flowSteps[2].desc}</p>
        </div>
        <div class="card-border"></div>
      </div>

      <!-- Step 4: Orchestrator - Wide Card -->
      <div class="flow-bento-card flow-card-wide">
        <div class="card-shine"></div>
        <div class="step-indicator">
          <span class="step-num">04</span>
        </div>
        <div class="card-inner horizontal">
          <div class="agent-avatar" style="background: linear-gradient(135deg, #FFB80020, #FFB80040);">
            <span class="agent-icon">{flowSteps[3].icon}</span>
            <div class="orbit-ring"></div>
          </div>
          <div class="card-info">
            <h3 class="flow-title">{flowSteps[3].title}</h3>
            <p class="flow-desc">{flowSteps[3].desc}</p>
          </div>
        </div>
        <div class="card-border"></div>
      </div>
    </div>
  </div>
</section>

<style>
  section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: 60px 0;
    position: relative;
    overflow: hidden;
  }

  section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      radial-gradient(ellipse at 50% 20%, rgba(0, 208, 132, 0.06) 0%, transparent 50%),
      radial-gradient(ellipse at 50% 80%, rgba(212, 167, 106, 0.05) 0%, transparent 50%);
    pointer-events: none;
  }

  .bento-container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
    position: relative;
    z-index: 1;
  }

  .section-header {
    text-align: center;
    margin-bottom: 48px;
  }

  .section-tag {
    display: inline-block;
    font-family: var(--font-mono);
    font-size: 12px;
    color: var(--gold);
    letter-spacing: 3px;
    margin-bottom: 16px;
    padding: 8px 16px;
    background: rgba(212, 167, 106, 0.1);
    border: 1px solid rgba(212, 167, 106, 0.3);
    border-radius: 0 !important;
  }

  .section-title {
    font-size: clamp(28px, 5vw, 42px);
    font-weight: 800;
    margin-bottom: 16px;
    letter-spacing: -1px;
  }

  .bento-flow-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: auto auto;
    gap: 20px;
    position: relative;
  }

  .flow-bento-card {
    background: var(--bg-surface);
    border: 1px solid var(--border-strong);
    border-radius: 0 !important;
    position: relative;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    min-height: 280px;
  }

  .flow-bento-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, rgba(255,255,255,0.03) 0%, transparent 40%);
    pointer-events: none;
    border-radius: 0 !important;
  }

  .flow-bento-card:hover {
    transform: translateY(-6px);
    border-color: rgba(212, 167, 106, 0.5);
    box-shadow: 
      0 25px 50px rgba(0, 0, 0, 0.5),
      0 0 80px rgba(212, 167, 106, 0.1);
  }

  .flow-card-large {
    grid-row: span 2;
    min-height: 380px;
  }

  .flow-card-wide {
    grid-column: span 2;
    min-height: 180px;
  }

  .card-shine {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.05),
      transparent
    );
    transition: left 0.6s ease;
    pointer-events: none;
  }

  .flow-bento-card:hover .card-shine {
    left: 100%;
  }

  .step-indicator {
    position: absolute;
    top: 20px;
    right: 20px;
    z-index: 2;
  }

  .step-num {
    font-family: var(--font-mono);
    font-size: 11px;
    font-weight: 700;
    color: var(--gold);
    letter-spacing: 2px;
    padding: 6px 12px;
    background: rgba(212, 167, 106, 0.1);
    border-radius: 0 !important;
  }



  .card-inner {
    padding: 28px;
    height: 100%;
    display: flex;
    flex-direction: column;
    position: relative;
    z-index: 1;
  }

  .card-inner.compact {
    padding: 24px;
  }

  .card-inner.horizontal {
    flex-direction: row;
    align-items: center;
    gap: 28px;
    padding: 24px 32px;
  }

  .card-visual {
    margin-bottom: 20px;
    position: relative;
  }

  .agent-avatar {
    width: 80px;
    height: 80px;
    border-radius: 0 !important;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .agent-avatar.small {
    width: 56px;
    height: 56px;
    border-radius: 0 !important;
    margin-bottom: 16px;
  }

  .agent-icon {
    font-family: var(--font-mono);
    font-size: 20px;
    font-weight: 700;
    color: var(--gold);
  }

  .agent-icon.small {
    font-size: 14px;
  }

  .pulse-ring {
    position: absolute;
    inset: -4px;
    border: 2px solid var(--gold);
    border-radius: 0 !important;
    opacity: 0;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0% {
      transform: scale(1);
      opacity: 0.5;
    }
    100% {
      transform: scale(1.15);
      opacity: 0;
    }
  }

  .orbit-ring {
    position: absolute;
    inset: -8px;
    border: 1px dashed rgba(255, 184, 0, 0.3);
    border-radius: 0 !important;
    animation: orbit 10s linear infinite;
  }

  @keyframes orbit {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .status-badge {
    position: absolute;
    bottom: -8px;
    right: -8px;
    font-family: var(--font-mono);
    font-size: 9px;
    font-weight: 700;
    padding: 4px 10px;
    border-radius: 0 !important;
    letter-spacing: 1px;
  }

  .status-badge.active {
    background: #00D084;
    color: #000;
  }

  .card-info {
    flex: 1;
  }

  .flow-title {
    font-size: 18px;
    font-weight: 700;
    margin-bottom: 10px;
    letter-spacing: -0.3px;
  }

  .flow-card-large .flow-title {
    font-size: 24px;
    margin-bottom: 12px;
  }

  .flow-desc {
    font-size: 13px;
    color: var(--text-secondary);
    line-height: 1.6;
  }

  .flow-card-large .flow-desc {
    font-size: 15px;
    max-width: 90%;
  }

  .card-border {
    position: absolute;
    inset: 0;
    border-radius: 0 !important;
    padding: 1px;
    background: linear-gradient(135deg, rgba(212, 167, 106, 0.3), transparent, rgba(0, 208, 132, 0.2));
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .flow-bento-card:hover .card-border {
    opacity: 1;
  }

  @media (max-width: 1024px) {
    .bento-flow-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .flow-card-large {
      grid-column: span 2;
      grid-row: span 1;
      min-height: 320px;
    }

    .flow-card-wide {
      grid-column: span 2;
    }

    .card-inner.horizontal {
      flex-wrap: wrap;
    }
  }

  @media (max-width: 640px) {
    section {
      min-height: auto;
      padding: 60px 0;
    }

    .bento-flow-grid {
      grid-template-columns: 1fr;
      gap: 16px;
    }

    .flow-card-large,
    .flow-card-wide {
      grid-column: span 1;
      min-height: auto;
    }

    .card-inner {
      padding: 24px;
    }

    .card-inner.horizontal {
      flex-direction: column;
      align-items: flex-start;
      gap: 20px;
    }
  }
</style>
