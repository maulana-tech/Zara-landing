---
import { strategies } from '../data/site-data';
---

<section id="strategies">
  <div class="container">
    <div class="section-header">
      <div class="section-tag">Yield Strategies</div>
      <h2 class="section-title">Autonomous <span class="gradient-text">Strategies</span></h2>
      <p class="section-desc">
        AI-managed strategies across multiple protocols. Every prediction is ZK-verified on-chain.
      </p>
    </div>

    <div class="strategies-grid">
      {strategies.map((strat) => (
        <div class="strategy-card">
          <div class="strategy-header">
            <div class="strategy-header-left">
              <span class="strategy-icon">{strat.icon}</span>
              <div>
                <div class="strategy-name">{strat.name}</div>
                <div class="strategy-protocol">{strat.protocol}</div>
              </div>
            </div>
            <span class="strategy-risk" style={`color: ${strat.riskColor}; border-color: ${strat.riskColor}30; background: ${strat.riskColor}10;`}>
              {strat.risk}
            </span>
          </div>

          <div class="strategy-meta">
            <div class="strategy-meta-item">
              <span class="strategy-meta-label">APY</span>
              <span class="strategy-meta-value" style="color: var(--green);">{strat.apy}</span>
            </div>
            <div class="strategy-meta-item">
              <span class="strategy-meta-label">TVL</span>
              <span class="strategy-meta-value">{strat.tvl}</span>
            </div>
          </div>

          <div class="strategy-breakdown">
            {strat.breakdown.map((item) => (
              <div class="breakdown-row">
                <span class="breakdown-label">{item.label}</span>
                <div class="breakdown-bar-bg">
                  <div class="breakdown-bar" style={`width: ${item.pct}%;`}></div>
                </div>
                <span class="breakdown-value">{item.value}%</span>
              </div>
            ))}
          </div>

          <div class="strategy-footer">
            <span>Agents: 3 active</span>
            <span class="zk-badge">âœ“ ZK Verified</span>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  section { padding: 80px 0; }

  .strategies-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
  }

  .strategy-card {
    background: var(--bg-surface);
    border: 2px solid var(--border-strong);
    padding: 28px;
    box-shadow: 4px 4px 0px #000;
    transition: all 0.15s ease;
  }

  .strategy-card:hover {
    transform: translate(-1px, -1px);
    box-shadow: 6px 6px 0px #000;
    border-color: rgba(212, 167, 106, 0.4);
    background: #18181D;
  }

  .strategy-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    margin-bottom: 20px;
  }

  .strategy-header-left {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .strategy-icon {
    font-family: var(--font-mono);
    font-size: 14px;
    font-weight: 700;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(212, 167, 106, 0.1);
    border: 2px solid rgba(212, 167, 106, 0.25);
    color: var(--gold-light);
    flex-shrink: 0;
  }

  .strategy-name {
    font-size: 16px;
    font-weight: 700;
  }

  .strategy-protocol {
    font-size: 12px;
    color: var(--text-secondary);
    margin-top: 2px;
  }

  .strategy-risk {
    font-size: 11px;
    font-weight: 600;
    padding: 4px 10px;
    border: 1px solid;
  }

  .strategy-meta {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 16px;
    margin-bottom: 20px;
    padding-bottom: 20px;
    border-bottom: 1px solid var(--border);
  }

  .strategy-meta-item {
    display: flex;
    flex-direction: column;
  }

  .strategy-meta-label {
    font-size: 11px;
    color: var(--text-tertiary);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .strategy-meta-value {
    font-family: var(--font-mono);
    font-size: 22px;
    font-weight: 700;
  }

  .strategy-breakdown {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .breakdown-row {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .breakdown-label {
    font-size: 12px;
    color: var(--text-secondary);
    width: 110px;
    flex-shrink: 0;
  }

  .breakdown-bar-bg {
    flex: 1;
    height: 6px;
    background: var(--bg-elevated);
    overflow: hidden;
  }

  .breakdown-bar {
    height: 100%;
    background: var(--gold);
    transition: width 0.6s ease;
  }

  .breakdown-value {
    font-family: var(--font-mono);
    font-size: 12px;
    font-weight: 600;
    color: var(--text-secondary);
    width: 48px;
    text-align: right;
    flex-shrink: 0;
  }

  .strategy-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 20px;
    padding-top: 16px;
    border-top: 1px solid var(--border);
    font-size: 12px;
    color: var(--text-tertiary);
  }

  .zk-badge {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    color: var(--green);
    font-weight: 600;
  }

  @media (max-width: 1024px) {
    .strategies-grid { grid-template-columns: 1fr; }
  }

  @media (max-width: 640px) {
    section { padding: 60px 0; }
  }
</style>
