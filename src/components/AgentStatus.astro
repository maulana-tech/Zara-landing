---
import { agents } from '../data/site-data';
---

<section id="agents">
  <div class="container">
    <div class="section-header">
      <div class="section-tag">// AI Agents</div>
      <h2 class="section-title">Agent <span class="gradient-text">Status</span></h2>
      <p class="section-desc">
        Three specialized AI agents work in coordination â€” monitoring, analyzing, and executing 24/7.
      </p>
    </div>

    <div class="agents-grid">
      {agents.map((agent) => (
        <div class="agent-card">
          <div class="agent-header">
            <span class="agent-name">{agent.name}</span>
            <div class="agent-status">
              <div class="status-dot"></div>
              Online
            </div>
          </div>
          <div class="agent-role">{agent.role}</div>

          <div class="agent-accuracy">
            <span class="accuracy-label">Accuracy</span>
            <span class="accuracy-value">{agent.accuracy}%</span>
          </div>

          <div class="agent-metrics">
            {agent.metrics.map((m) => (
              <div class="metric-row">
                <span class="metric-label">{m.label}</span>
                <span class="metric-value">{m.value}</span>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  section { padding: 80px 0; }

  .agents-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
  }

  .agent-card {
    background: var(--bg-surface);
    border: 2px solid var(--border-strong);
    padding: 24px;
    box-shadow: 4px 4px 0px #000;
    transition: all 0.15s ease;
  }

  .agent-card:hover {
    transform: translate(-1px, -1px);
    box-shadow: 6px 6px 0px #000;
    border-color: rgba(212, 167, 106, 0.4);
    background: #18181D;
  }

  .agent-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 4px;
  }

  .agent-name {
    font-size: 15px;
    font-weight: 700;
  }

  .agent-status {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 11px;
    font-weight: 600;
    color: var(--green);
  }

  .status-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--green);
    animation: pulseDot 2s ease-in-out infinite;
  }

  .agent-role {
    font-size: 12px;
    color: var(--text-tertiary);
    margin-bottom: 16px;
  }

  .agent-accuracy {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 16px;
    padding-bottom: 16px;
    border-bottom: 1px solid var(--border);
  }

  .accuracy-label {
    font-size: 11px;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .accuracy-value {
    font-family: var(--font-mono);
    font-size: 18px;
    font-weight: 700;
    color: var(--green);
  }

  .agent-metrics {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .metric-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .metric-label {
    font-size: 12px;
    color: var(--text-secondary);
  }

  .metric-value {
    font-family: var(--font-mono);
    font-size: 12px;
    font-weight: 600;
    color: white;
  }

  @media (max-width: 1024px) {
    .agents-grid { grid-template-columns: repeat(2, 1fr); }
  }

  @media (max-width: 640px) {
    section { padding: 60px 0; }
    .agents-grid { grid-template-columns: 1fr; }
  }
</style>
