---
import { DASHBOARD_URL } from '../data/site-data';
---

<section class="hero">
  <div class="hero-content">
    <div class="hero-layout">
      <!-- Left: Large main card -->
      <div class="main-card">
        <div class="hero-badge">
          <span class="badge-text">Live on BNB Chain</span>
          <span class="badge-arrow">→</span>
        </div>

        <h1 class="hero-title">
          Self-Driving<br />
          <span class="gradient-text">Yield Engine</span>
        </h1>

        <p class="hero-desc">
          Zero-Knowledge Machine Learning meets Multi-Agent Architecture for autonomous yield optimization.
        </p>

        <a href={DASHBOARD_URL} class="hero-cta">
          Launch App
        </a>

        <!-- 3D Blocks Illustration -->
        <div class="hero-illustration">
          <div class="blocks-container">
            <div class="block block-1">
              <div class="block-face front"></div>
              <div class="block-face top"></div>
              <div class="block-face side"></div>
              <div class="block-icon">◆</div>
            </div>
            <div class="block block-2">
              <div class="block-face front"></div>
              <div class="block-face top"></div>
              <div class="block-face side"></div>
              <div class="block-icon">✓</div>
            </div>
            <div class="block block-3">
              <div class="block-face front"></div>
              <div class="block-face top"></div>
              <div class="block-face side"></div>
              <div class="block-icon">⚡</div>
            </div>
            <div class="block block-4">
              <div class="block-face front"></div>
              <div class="block-face top"></div>
              <div class="block-face side"></div>
              <div class="block-icon">◈</div>
            </div>
          </div>
          <!-- Connection lines -->
          <svg class="connection-lines" viewBox="0 0 200 100">
            <line x1="50" y1="50" x2="100" y2="30" stroke="#D4A76A" stroke-width="1" opacity="0.3"/>
            <line x1="100" y1="30" x2="150" y2="50" stroke="#D4A76A" stroke-width="1" opacity="0.3"/>
            <line x1="75" y1="70" x2="125" y2="70" stroke="#00D084" stroke-width="1" opacity="0.3"/>
          </svg>
        </div>
      </div>

<!-- Right: Two stacked cards -->
      <div class="right-cards">
        <!-- Top: Gold card with chart -->
        <div class="hero-card card-gold">
          <div class="chart-wrapper">
            <div class="chart-top">
              <div class="chart-title">
                <span class="title-text">APY Growth</span>
                <span class="title-badge">+18.7%</span>
              </div>
              <div class="chart-tabs">
                <span class="tab active">1D</span>
                <span class="tab">1W</span>
                <span class="tab">1M</span>
              </div>
            </div>
            <div class="chart-visual">
              <svg class="chart-svg" viewBox="0 0 320 120" preserveAspectRatio="none">
                <defs>
                  <linearGradient id="areaGrad" x1="0%" y1="0%" x2="0%" y2="100%">
                    <stop offset="0%" stop-color="#D4A76A" stop-opacity="0.5"/>
                    <stop offset="50%" stop-color="#D4A76A" stop-opacity="0.15"/>
                    <stop offset="100%" stop-color="#D4A76A" stop-opacity="0"/>
                  </linearGradient>
                  <linearGradient id="lineGrad" x1="0%" y1="0%" x2="100%" y2="0%">
                    <stop offset="0%" stop-color="#D4A76A"/>
                    <stop offset="100%" stop-color="#E8C888"/>
                  </linearGradient>
                  <filter id="chartGlow" x="-50%" y="-50%" width="200%" height="200%">
                    <feGaussianBlur stdDeviation="3" result="blur"/>
                    <feMerge>
                      <feMergeNode in="blur"/>
                      <feMergeNode in="SourceGraphic"/>
                    </feMerge>
                  </filter>
                </defs>
                
                <!-- Grid -->
                <line x1="0" y1="30" x2="320" y2="30" stroke="rgba(255,255,255,0.06)"/>
                <line x1="0" y1="60" x2="320" y2="60" stroke="rgba(255,255,255,0.06)"/>
                <line x1="0" y1="90" x2="320" y2="90" stroke="rgba(255,255,255,0.06)"/>
                <line x1="0" y1="120" x2="320" y2="120" stroke="rgba(255,255,255,0.06)"/>
                
                <!-- Area -->
                <path d="M0,100 L30,95 L60,85 L90,75 L120,70 L150,60 L180,50 L210,45 L240,35 L270,30 L300,25 L320,20 L320,120 L0,120 Z" fill="url(#areaGrad)"/>
                
                <!-- Line -->
                <path d="M0,100 L30,95 L60,85 L90,75 L120,70 L150,60 L180,50 L210,45 L240,35 L270,30 L300,25 L320,20" fill="none" stroke="url(#lineGrad)" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" filter="url(#chartGlow)"/>
                
                <!-- Points -->
                <circle cx="90" cy="75" r="4" fill="#D4A76A"/>
                <circle cx="180" cy="50" r="5" fill="#D4A76A"/>
                <circle cx="270" cy="30" r="5" fill="#D4A76A"/>
                <circle cx="320" cy="20" r="6" fill="#E8C888" stroke="#0A0A0F" stroke-width="2"/>
              </svg>
            </div>
            <div class="chart-stats-row">
              <div class="stat-item">
                <span class="stat-label">Today</span>
                <span class="stat-value">18.7%</span>
              </div>
              <div class="stat-item">
                <span class="stat-label">24h</span>
                <span class="stat-value up">+2.3%</span>
              </div>
              <div class="stat-item">
                <span class="stat-label">7d</span>
                <span class="stat-value up">+8.1%</span>
              </div>
              <div class="stat-item">
                <span class="stat-label">30d</span>
                <span class="stat-value up">+24.5%</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Bottom: Dark card with agents -->
        <div class="hero-card card-dark">
          <h3 class="card-title">Active Agents</h3>
          <div class="agents-row">
            <div class="agent-avatars">
              <div class="agent-avatar-mini" style="background: linear-gradient(135deg, #D4A76A, #E8C888);">MA</div>
              <div class="agent-avatar-mini" style="background: linear-gradient(135deg, #E8C888, #D4A76A);">RM</div>
              <div class="agent-avatar-mini" style="background: linear-gradient(135deg, #00D084, #00B872);">EA</div>
            </div>
            <span class="agents-count">+3 Agents</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Background elements -->
  <div class="bg-grid"></div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: 120px 0 80px;
    overflow: hidden;
  }

  .hero-content {
    position: relative;
    z-index: 10;
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 16px;
  }

  .hero-layout {
    display: grid;
    grid-template-columns: 1.1fr 0.9fr;
    gap: 24px;
    align-items: stretch;
    width: 100%;
  }

  /* Left: Main card */
  .main-card {
    background: var(--bg-surface);
    border: 1px solid var(--border-strong);
    padding: 48px 56px;
    display: flex;
    flex-direction: column;
    position: relative;
    overflow: hidden;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 18px;
    background: rgba(212, 167, 106, 0.1);
    border: 1px solid rgba(212, 167, 106, 0.3);
    width: fit-content;
    margin-bottom: 32px;
  }

  .badge-text {
    font-family: var(--font-mono);
    font-size: 12px;
    color: var(--gold);
    letter-spacing: 0.5px;
  }

  .badge-arrow {
    color: var(--gold);
    font-size: 14px;
  }

  .hero-title {
    font-size: clamp(36px, 4vw, 56px);
    font-weight: 900;
    line-height: 1.08;
    letter-spacing: -2px;
    margin-bottom: 20px;
  }

  .hero-desc {
    font-size: 16px;
    color: var(--text-secondary);
    max-width: 400px;
    margin-bottom: 32px;
    line-height: 1.6;
  }

  .hero-cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 14px 32px;
    background: #000;
    color: #fff;
    font-size: 15px;
    font-weight: 600;
    text-decoration: none;
    width: fit-content;
    margin-bottom: 40px;
    transition: all 0.2s;
    border: 1px solid var(--border-strong);
  }

  .hero-cta:hover {
    background: var(--gold);
    color: #000;
    border-color: var(--gold);
  }

  /* 3D Blocks Illustration */
  .hero-illustration {
    position: relative;
    height: 180px;
    margin-top: 20px;
  }

  .blocks-container {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .block {
    position: absolute;
    width: 60px;
    height: 60px;
    transform-style: preserve-3d;
  }

  .block-1 { bottom: 20px; left: 20px; }
  .block-2 { bottom: 50px; left: 90px; }
  .block-3 { bottom: 10px; left: 160px; }
  .block-4 { bottom: 60px; left: 130px; }

  .block-face {
    position: absolute;
    width: 100%;
    height: 100%;
    border: 1px solid rgba(212, 167, 106, 0.3);
  }

  .block-face.front {
    background: rgba(20, 20, 24, 0.9);
    transform: translateZ(30px);
  }

  .block-face.top {
    background: rgba(212, 167, 106, 0.15);
    transform: rotateX(-90deg) translateZ(30px);
  }

  .block-face.side {
    background: rgba(212, 167, 106, 0.08);
    transform: rotateY(90deg) translateZ(30px);
    width: 60px;
  }

  .block-icon {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) translateZ(26px);
    font-size: 16px;
    color: var(--gold);
  }

  .connection-lines {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }

  /* Right: Stacked cards */
  .right-cards {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  .hero-card {
    border: 1px solid var(--border-strong);
    position: relative;
    overflow: hidden;
    flex: 1;
  }

  .card-gold {
    background: linear-gradient(135deg, rgba(212, 167, 106, 0.2), rgba(20, 20, 24, 0.95));
    min-height: 320px;
    padding: 32px 36px;
    display: flex;
    flex-direction: column;
    position: relative;
  }

  .card-badge {
    display: none;
  }

  .chart-wrapper {
    display: flex;
    flex-direction: column;
    height: 100%;
    gap: 12px;
  }

  .chart-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .chart-title {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .title-text {
    font-family: var(--font-mono);
    font-size: 12px;
    color: rgba(255, 255, 255, 0.6);
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .title-badge {
    padding: 6px 12px;
    background: linear-gradient(135deg, #D4A76A, #E8C888);
    color: #000;
    font-family: var(--font-mono);
    font-size: 12px;
    font-weight: 700;
  }

  .chart-tabs {
    display: flex;
    gap: 4px;
    background: rgba(255, 255, 255, 0.05);
    padding: 4px;
  }

  .tab {
    padding: 6px 12px;
    font-family: var(--font-mono);
    font-size: 11px;
    color: rgba(255, 255, 255, 0.5);
    cursor: pointer;
    transition: all 0.2s;
  }

  .tab.active {
    background: rgba(212, 167, 106, 0.2);
    color: var(--gold);
  }

  .chart-visual {
    flex: 1;
    min-height: 120px;
    position: relative;
  }

  .chart-svg {
    width: 100%;
    height: 100%;
  }

  .chart-stats-row {
    display: flex;
    gap: 24px;
    padding-top: 12px;
    border-top: 1px solid rgba(255, 255, 255, 0.08);
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .stat-item .stat-label {
    font-family: var(--font-mono);
    font-size: 10px;
    color: rgba(255, 255, 255, 0.4);
    text-transform: uppercase;
  }

  .stat-item .stat-value {
    font-family: var(--font-mono);
    font-size: 14px;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.8);
  }

  .stat-item .stat-value.up {
    color: #00D084;
  }

  /* Old chart styles - remove
  .chart-container {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 160px;
  }

  .chart-line {
    width: 100%;
    height: 100%;
  }
  */

  /* Dark card */
  .card-dark {
    background: var(--bg-surface);
    display: flex;
    flex-direction: column;
    justify-content: center;
    min-height: 200px;
    padding: 36px 40px;
  }

  /* Dark card content */
  .card-title {
    font-size: 20px;
    font-weight: 700;
    margin: 0 0 24px 0;
  }

  .agents-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .agent-avatars {
    display: flex;
  }

  .agent-avatar-mini {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-mono);
    font-size: 12px;
    font-weight: 700;
    color: #000;
    margin-left: -10px;
    border: 2px solid var(--bg-surface);
  }

  .agent-avatar-mini:first-child {
    margin-left: 0;
  }

  .agents-count {
    font-family: var(--font-mono);
    font-size: 13px;
    color: var(--text-secondary);
    padding: 10px 18px;
    border: 1px solid var(--border-strong);
    background: rgba(255, 255, 255, 0.05);
  }

  /* Background */
  /* Background */
  .bg-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(212, 167, 106, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(212, 167, 106, 0.03) 1px, transparent 1px);
    background-size: 60px 60px;
    mask-image: radial-gradient(ellipse 70% 50% at 50% 40%, black 30%, transparent 70%);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .hero-content {
      padding: 0 24px;
    }

    .hero-layout {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .main-card {
      padding: 40px;
      align-items: center;
      text-align: center;
    }

    .hero-illustration {
      display: none;
    }

    .right-cards {
      flex-direction: row;
    }

    .hero-card {
      flex: 1;
    }

    .hero-desc {
      max-width: 500px;
    }
  }

  @media (max-width: 640px) {
    .hero {
      padding: 100px 0 60px;
    }

    .hero-content {
      padding: 0 16px;
    }

    .main-card {
      padding: 28px;
    }

    .right-cards {
      flex-direction: column;
    }

    .card-gold {
      min-height: 160px;
    }

    .card-dark {
      min-height: 120px;
    }
  }
</style>
