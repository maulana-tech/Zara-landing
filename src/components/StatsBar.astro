---
import { stats } from '../data/site-data';
---

<div class="stats-bar">
  <div class="container">
    <div class="stats-grid">
      {stats.map((stat) => (
        <div class="stat-card">
          <div class="stat-label">{stat.label}</div>
          <div class="stat-value">{stat.value}</div>
          <div class={`stat-change ${stat.positive ? 'positive' : ''}`}>
            â†— {stat.change}
          </div>
        </div>
      ))}
    </div>
  </div>
</div>

<style>
  .stats-bar {
    position: relative;
    padding: 0 0 80px;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 16px;
  }

  .stat-card {
    background: var(--bg-surface);
    border: 2px solid var(--border-strong);
    padding: 24px;
    box-shadow: 4px 4px 0px #000;
    transition: all 0.15s ease;
  }

  .stat-card:hover {
    border-color: rgba(212, 167, 106, 0.4);
    transform: translate(-1px, -1px);
    box-shadow: 6px 6px 0px #000;
    background: #18181D;
  }

  .stat-label {
    font-size: 11px;
    font-weight: 600;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 8px;
  }

  .stat-value {
    font-family: var(--font-mono);
    font-size: 28px;
    font-weight: 700;
    color: white;
    margin-bottom: 4px;
  }

  .stat-change {
    font-size: 12px;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .stat-change.positive { color: var(--green); }

  @media (max-width: 640px) {
    .stats-grid { grid-template-columns: 1fr; }
  }
</style>
